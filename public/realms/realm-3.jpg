<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg xmlns="http://www.w3.org/2000/svg" width="400" height="200" viewBox="0 0 400 200">
  <!-- Background gradient for Realm 3 - Mining Mines -->
  <defs>
    <linearGradient id="grad3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#374151;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1F2937;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="100%" height="100%" fill="url(#grad3)" />
  
  <!-- Mining elements -->
  <g opacity="0.8">
    <!-- Mountains/Cave -->
    <path d="M0,150 L80,80 L150,130 L200,70 L250,110 L320,50 L400,120 L400,200 L0,200 Z" fill="#4B5563" />
    
    <!-- Mining equipment -->
    <rect x="100" y="140" width="60" height="30" fill="#6B7280" rx="2" ry="2" />
    <rect x="250" y="140" width="60" height="30" fill="#6B7280" rx="2" ry="2" />
    
    <!-- Mining towers -->
    <rect x="115" y="100" width="30" height="40" fill="#6B7280" />
    <rect x="265" y="100" width="30" height="40" fill="#6B7280" />
    
    <!-- Mining supports -->
    <line x1="115" y1="100" x2="115" y2="50" stroke="#9CA3AF" stroke-width="3" />
    <line x1="145" y1="100" x2="145" y2="50" stroke="#9CA3AF" stroke-width="3" />
    <line x1="265" y1="100" x2="265" y2="50" stroke="#9CA3AF" stroke-width="3" />
    <line x1="295" y1="100" x2="295" y2="50" stroke="#9CA3AF" stroke-width="3" />
    
    <!-- Crossbeams -->
    <line x1="115" y1="70" x2="145" y2="70" stroke="#9CA3AF" stroke-width="2" />
    <line x1="265" y1="70" x2="295" y2="70" stroke="#9CA3AF" stroke-width="2" />
  </g>
  
  <!-- Coins being mined -->
  <circle cx="130" cy="40" r="12" fill="#F59E0B" stroke="#D97706" stroke-width="2" />
  <circle cx="280" cy="40" r="12" fill="#F59E0B" stroke="#D97706" stroke-width="2" />
  <text x="130" y="45" font-family="sans-serif" font-size="12" text-anchor="middle" fill="#7F1D1D">₿</text>
  <text x="280" y="45" font-family="sans-serif" font-size="12" text-anchor="middle" fill="#7F1D1D">₿</text>
  
  <!-- Realm name -->
  <text x="200" y="40" font-family="serif" font-size="20" text-anchor="middle" fill="#E5E7EB">The Mining Mines</text>
</svg>